<!DOCTYPE html>
<html>
	<head>
	  <title>Simple CMS | <%= @page_title || "Admin" %></title>
	  <%= stylesheet_link_tag('application', :media => 'all') %>
	</head>
	<body>

		<div id="header">
			<h1>Simple CMS admin</h1>
		</div>

		<div id="main">

			<!-- Notice section -->
			<% if !flash[:notice].blank? %>
			  <div class="notice">
			    <%= flash[:notice] %>
			  </div>
			<% end %>

			<div id="content">
				<%= yield %>
			</div>
		</div>

		<div id="footer">
			<p>Copyright Oleg Krasnov</p>
		</div>


	</body>
</html>
